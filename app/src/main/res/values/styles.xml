<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="GameTitleText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/text_size_super_large</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_double</item>
        <item name="android:layout_marginEnd">@dimen/spacing_double</item>
        <item name="android:layout_marginTop">@dimen/spacing_double</item>
    </style>

</resources>
